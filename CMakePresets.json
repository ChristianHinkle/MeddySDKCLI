{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "$comment": [
        "Copyright (c) 2023-2025 Christian Hinkle, Brian Hinkle.",
        "Includes: We have includes of utility files search from the `${sourceDir}` (which is the top-level project's directory), so that it's the responsibility of the top-level project to provide these files. We do this to avoid multiple includes to duplicate files. CMake throws an error if a preset is defined twice with the same name, but it does allow duplicate includes to the same file."
    ],
    "include": [
        "${sourceDir}/CMake/GenericCMakePresets/GenericPresets.json"
    ],
    "testPresets": [
        {
            "name": "meddysdkcli-base",
            "hidden": true,
            "filter": {
                "include": {
                    "name": "MeddySDKCLI."
                }
            }
        },
        {
            "name": "meddysdkcli-win-debug",
            "displayName": "MeddySDKCLI - Windows Debug",
            "inherits": [
                "meddysdkcli-base",
                "win-debug"
            ]
        },
        {
            "name": "meddysdkcli-win-release",
            "displayName": "MeddySDKCLI - Windows Release",
            "inherits": [
                "meddysdkcli-base",
                "win-release"
            ]
        },
        {
            "name": "meddysdkcli-linux-debug",
            "displayName": "MeddySDKCLI - Linux Debug",
            "inherits": [
                "meddysdkcli-base",
                "linux-debug"
            ]
        },
        {
            "name": "meddysdkcli-linux-release",
            "displayName": "MeddySDKCLI - Linux Release",
            "inherits": [
                "meddysdkcli-base",
                "linux-release"
            ]
        },
        {
            "name": "meddysdkcli-macos-debug",
            "displayName": "MeddySDKCLI - macOS Debug",
            "inherits": [
                "meddysdkcli-base",
                "macos-debug"
            ]
        },
        {
            "name": "meddysdkcli-macos-release",
            "displayName": "MeddySDKCLI - macOS Release",
            "inherits": [
                "meddysdkcli-base",
                "macos-release"
            ]
        }
    ],
    "packagePresets": [
        {
            "name": "meddysdkcli-base",
            "hidden": true,
            "configFile": "MeddySDKCLI/CPackConfig.cmake",
            "packageDirectory": "MeddySDKCLI/Packages"
        },
        {
            "name": "meddysdkcli-win-debug-nsis",
            "displayName": "MeddySDKCLI - Windows Debug - NSIS",
            "inherits": [
                "meddysdkcli-base",
                "nsis-base"
            ],
            "configurePreset": "win-debug-default"
        },
        {
            "name": "meddysdkcli-win-release-nsis",
            "displayName": "MeddySDKCLI - Windows Release - NSIS",
            "inherits": [
                "meddysdkcli-base",
                "nsis-base"
            ],
            "configurePreset": "win-release-default"
        }
    ]
}
